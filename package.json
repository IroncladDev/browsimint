{
  "name": "fedimint-web",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite & bun watch-tailwind",
    "build": "tsc && vite build && bun build-tailwind",
    "build-tailwind": "tailwindcss -i ./src/index.css -o ./dist/index.css",
    "watch-tailwind": "tailwindcss -i ./src/index.css -o ./dist/index.css --watch"
  },
  "dependencies": {
    "@fedimint/core-web": "^0.0.7",
    "async-mutex": "^0.5.0",
    "framer-motion": "^11.11.8",
    "nostr-tools": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-tailwind-variants": "^1.0.2",
    "vite-plugin-top-level-await": "^1.4.4",
    "vite-plugin-wasm": "^3.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "eslint": "8",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vite-plugin-web-extension": "^4.0.0",
    "webextension-polyfill": "^0.10.0"
  }
}
